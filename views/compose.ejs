<%- include('partials/header') %>

<h1>Compose</h1>

<form action="/compose" method="post">
  <div class="form-group">
    <label for="post-title">Title</label>
    <input type="text" class="form-control" name="postTitle" id="post-title" placeholder="Post Title ..." required>
  </div>
  <div class="form-group">
    <label for="post-body">Post</label>
    <textarea class="form-control" id="post-body" rows="5" name="postBody" placeholder="Post .. " required></textarea>
  </div>
  <div class="form-group">
    <button type="submit" name="button" class="btn">Publish</button>
  </div>
</form>

<%- include('partials/footer') %>
